{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of outgoing flights by Airport and Date",
  "layer": [
    {"data": {
      "url": "https://raw.githubusercontent.com/iancyw/VegaLite/main/js/output.json",
      "format": {
      "type": "topojson",
      "feature": "STE11aAust"
      }
    },
    "mark": {
      "type": "geoshape",
      "fill": "lightgray",
      "stroke": "white"
    }
    },
    {
      "mark": {"type": "rule", "color": "black", "opacity": 1},
      "data": {"url": "https://raw.githubusercontent.com/iancyw/VegaLite/main/data/airports_flights.csv"},
      "transform": [
        {"filter": {"param": "org", "empty": false}},
        {
          "lookup": "Origin",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/iancyw/VegaLite/main/data/airports.csv"},
            "key": "Airport",
            "fields": ["Latitude", "Longitude"]
          }
        },
        {
          "lookup": "Destination",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/iancyw/VegaLite/main/data/airports.csv"},
            "key": "Airport",
            "fields": ["Latitude", "Longitude"]
          },
          "as": ["lat2", "lon2"]
        }
      ],
      "encoding": {
        "latitude": {"field": "Latitude"},
        "longitude": {"field": "Longitude"},
        "latitude2": {"field": "lat2"},
        "longitude2": {"field": "lon2"},
        "tooltip": [
          {"field": "Origin"},
          {"field": "Destination"},
          {"field": "Count"}
        ]
      }
    },
    {
      "mark": {"type": "circle"},
      "data": {"url": "https://raw.githubusercontent.com/iancyw/VegaLite/main/data/airports_flights.csv"},
      "transform": [
        {"aggregate": [{"op": "count", "as": "Routes"}], "groupby": ["Origin"]},
        {
          "lookup": "Origin",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/iancyw/VegaLite/main/data/airports.csv"},
            "key": "Airport",
            "fields": ["Latitude", "Longitude"]
          }
        }
      ],
      "params": [{
        "name": "org",
        "select": {
          "type": "point",
          "on": "mouseover",
          "nearest": false,
          "fields": ["Origin"]
        }
      }],
      "encoding": {
        "latitude": {"field": "Latitude"},
        "longitude": {"field": "Longitude"},
        "size": {
          "field": "Routes",
          "type": "quantitative",
          "scale": {"rangeMax": 500},
          "legend": null
        },
        "tooltip": [
          {"field": "Origin"},
          {"field": "Routes"}
        ],
        "order": {
          "field": "Routes",
          "sort": "descending"
        }
      }
    }
  ],
  "projection": {"type": "equirectangular"},
  "width": 900,
  "height": 500
}